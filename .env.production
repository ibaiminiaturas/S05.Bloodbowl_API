APP_NAME=BloodBowlAPI
APP_ENV=production
APP_KEY=  # ← Se genera luego con `php artisan key:generate`
APP_DEBUG=false
APP_URL=https://your-project-name.up.railway.app  # ← cambia esto por tu URL real

LOG_CHANNEL=stack
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=containers-us-west-xxx.railway.app  # ← te lo da Railway
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_user
DB_PASSWORD=your_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

PASSPORT_CLIENT_ID=   # ← lo obtienes con `php artisan passport:client`
PASSPORT_CLIENT_SECRET= # ← lo mismo

SWAGGER_VERSION=3.0
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_DOCS_URL=https://your-project-name.up.railway.app/api/documentation

# Opcional: CORS
SANCTUM_STATEFUL_DOMAINS=*
SESSION_DOMAIN=your-project-name.up.railway.app