{
    "openapi": "3.0.0",
    "info": {
        "title": "Bloodbowl API",
        "description": "Documentación API Bloodbowl",
        "contact": {
            "email": "tu-email@ejemplo.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authoritation"
                ],
                "summary": "Iniciar sesión",
                "description": "Autentica un usuario y devuelve un token Bearer.",
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "usuario@ejemplo.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Credenciales inválidas"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authoritation"
                ],
                "summary": "Cerrar sesión",
                "description": "Cierra la sesión del usuario invalidando el token de acceso actual. El usuario deberá autenticarse nuevamente para obtener un nuevo token.",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "Successfully logged out"
                    },
                    "401": {
                        "description": "Unauthenticated."
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Authoritation"
                ],
                "summary": "Registro de usuario.",
                "description": "Crea un nuevo usuario en el sistema con los datos proporcionados. Devuelve información básica del usuario creado y un token de acceso para autenticación inmediata. Además agrega el rol 'coach' al usuario creado",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "nombre1"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "usuario@ejemplo.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registro exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "example": "nombre1"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "usuario@ejemplo.com"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-07-08T08:47:41.000000Z"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-07-08T08:47:41.000000Z"
                                        },
                                        "id": {
                                            "type": "integer",
                                            "example": 345
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Errores de validación",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "email": [
                                                    "The email has already been taken.",
                                                    "The email field is required."
                                                ],
                                                "name": [
                                                    "The name field is required."
                                                ],
                                                "password": [
                                                    "The password field is required.",
                                                    "The password field confirmation does not match.",
                                                    "The password field must be at least 6 characters."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/coaches": {
            "get": {
                "tags": [
                    "Coaches"
                ],
                "summary": "Get list of users with 'coach' role",
                "description": "Returns an array of users who have the 'coach' role assigned.",
                "operationId": "getCoaches",
                "responses": {
                    "200": {
                        "description": "Users list retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 302
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Mrs. Melissa Franecki Jr."
                                                    },
                                                    "email": {
                                                        "type": "string",
                                                        "format": "email",
                                                        "example": "ima.ohara@example.org"
                                                    },
                                                    "email_verified_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-07-08T08:05:50.000000Z"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-07-08T08:05:50.000000Z"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-07-08T08:05:50.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized. Invalid or missing token."
                    },
                    "403": {
                        "description": "User does not have the right roles."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/coaches/{coach}": {
            "get": {
                "tags": [
                    "Coaches"
                ],
                "summary": "Get coach data by ID",
                "description": "Returns basic data of a user with the 'coach' role. Returns 404 if the user does not have that role.",
                "operationId": "c4aaa503b73d08fed553c4e153c976d8",
                "parameters": [
                    {
                        "name": "coach",
                        "in": "path",
                        "description": "ID of the coach user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 302
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Coach data retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 302
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Mrs. Melissa Franecki Jr."
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "ima.ohara@example.org"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-07-08T08:05:50.000000Z"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-07-08T08:05:50.000000Z"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found or is not a coach"
                    },
                    "401": {
                        "description": "Unauthorized. Invalid or missing token."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/rosters": {
            "get": {
                "tags": [
                    "Rosters"
                ],
                "summary": "Get all rosters",
                "description": "Returns a list of all rosters available in the system.",
                "operationId": "3099c3eea99c0296b86ce4433db362a5",
                "responses": {
                    "200": {
                        "description": "List of rosters retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Humans"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized. Invalid or missing token."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/rosters/{roster}": {
            "get": {
                "tags": [
                    "Rosters"
                ],
                "summary": "Get player types for a specific roster",
                "description": "Returns the list of player types associated with the specified roster.",
                "operationId": "8dbdba4ec6d0d5ad48159ca05615ae48",
                "parameters": [
                    {
                        "name": "roster",
                        "in": "path",
                        "description": "ID of the roster",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Player types retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Lineman"
                                                    },
                                                    "roster_id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "max_per_team": {
                                                        "type": "integer",
                                                        "example": 16
                                                    },
                                                    "movement": {
                                                        "type": "integer",
                                                        "example": 6
                                                    },
                                                    "strength": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "agility": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "passing": {
                                                        "type": "integer",
                                                        "example": 2
                                                    },
                                                    "armor": {
                                                        "type": "integer",
                                                        "example": 7
                                                    },
                                                    "cost": {
                                                        "type": "integer",
                                                        "example": 50000
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized. Invalid or missing token."
                    },
                    "404": {
                        "description": "No query results for model [App\\\\Models\\\\Roster] *"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/simulate-match": {
            "post": {
                "tags": [
                    "Match Simulation"
                ],
                "summary": "Simulate a match between two teams",
                "description": "Simulates touchdowns scored by players of two teams and returns results with the winner.",
                "operationId": "523102c41b17a65fa9b6fcefa11c6153",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "team_1_id",
                                    "team_2_id"
                                ],
                                "properties": {
                                    "team_1_id": {
                                        "description": "ID of the first team",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "team_2_id": {
                                        "description": "ID of the second team",
                                        "type": "integer",
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Match simulated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "team_1": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "Team A"
                                                },
                                                "touchdowns": {
                                                    "type": "integer",
                                                    "example": 3
                                                },
                                                "scorers": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "player_name": {
                                                                "type": "string",
                                                                "example": "John Doe"
                                                            },
                                                            "touchdowns": {
                                                                "type": "integer",
                                                                "example": 2
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "team_2": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "Team B"
                                                },
                                                "touchdowns": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "scorers": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "player_name": {
                                                                "type": "string",
                                                                "example": "Jane Smith"
                                                            },
                                                            "touchdowns": {
                                                                "type": "integer",
                                                                "example": 1
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "winner": {
                                            "type": "string",
                                            "example": "Team A"
                                        }
                                    },
                                    "type": "object"
                                },
                                "example": {
                                    "team_1": {
                                        "name": "Team A",
                                        "touchdowns": 3,
                                        "scorers": [
                                            {
                                                "player_name": "John Doe",
                                                "touchdowns": 2
                                            },
                                            {
                                                "player_name": "Mike Brown",
                                                "touchdowns": 1
                                            }
                                        ]
                                    },
                                    "team_2": {
                                        "name": "Team B",
                                        "touchdowns": 1,
                                        "scorers": [
                                            {
                                                "player_name": "Jane Smith",
                                                "touchdowns": 1
                                            }
                                        ]
                                    },
                                    "winner": "Team A"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error (e.g., missing or invalid team IDs)"
                    },
                    "401": {
                        "description": "Unauthorized. Invalid or missing token."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
